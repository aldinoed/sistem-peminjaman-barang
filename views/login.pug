doctype html
html(lang="en")
      head
            meta(charset="utf-8")
            meta(name="viewport", content="width=device-width, initial-scale=1")
            title Sistem Peminjaman Barang

            //- Bootstrap CSS 
            link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" ,rel="stylesheet", integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9", crossorigin="anonymous")

            //- Custom CSS
            style 
                  include ../assets/css/style.css

            //- Font
            link(href="https://fonts.googleapis.com/css2?family=Poppins&display=swap", rel="stylesheet")
      body
            div(class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh")
                  div(class="card rounded d-flex flex-row shadow bg-primary" style="border: none; width: 65%; height: 70%")
                        div(class="brand-login" style="width:43%")
                              //- img(src="/img/login1.jpg", alt="halo")
                        div(class="bg-white p-5" style="width:57%" )
                              h5( class="fs-3 text-center") Login
                              form(method="POST" action="/login" class="mt-4")
                                    div.mb-3
                                          label.form-label(for='exampleInputEmail1') Email
                                          input#exampleInputEmail1.form-control(type='email' aria-describedby='emailHelp', name="email-login")
                                    div.mb-3
                                          label.form-label(for='exampleInputPassword1') Password
                                          input#exampleInputPassword1.form-control(type='password', name="password-login")
                                    div.mb-3.form-check
                                          input#exampleCheck1.form-check-input(type='checkbox')
                                          label.form-check-label(for='exampleCheck1') Remember me
                                    button.btn.btn-primary(type='submit') Login
                                    br
                                    span Tidak bisa login? Hubungi 
                                    a(href="https://api.whatsapp.com/send?phone=6283811051466") Admin 

      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" ,integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" ,crossorigin="anonymous")
